<link rel="stylesheet" href="https://formden.com/static/cdn/bootstrap-iso.css" />
<link rel="stylesheet" href="https://formden.com/static/cdn/font-awesome/4.4.0/css/font-awesome.min.css" />
<style>.bootstrap-iso .formden_header h2, .bootstrap-iso .formden_header p, .bootstrap-iso form{font-family: Arial, Helvetica, sans-serif; color: black}.bootstrap-iso form button, .bootstrap-iso form button:hover{color: white !important;} .asteriskField{color: red;}</style>


<br><br>
<% @vehicle_attachments.each do |p| %>
    <%= image_tag p.avatar_url %>
    <%= link_to "Edit Attachment", edit_vehicle_attachment_path(p) %>
<% end %>

<div class="well col-xs-14 col-xs-offset">




  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-6">
        <br>

        <h4><i class="fa fa-car"></i> &nbsp<b>Vehicle Details</b></h4>
        <hr><br>
        <p>
          <b>Vehicle Type:</b> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= @passengerride.vehicle %>
        </p>
        <br>
        <p>
          <b>Model:</b> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= @passengerride.model %>
        </p>
        <br>
        <p>
          <b>Rent: </b>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&#3647;<%= @passengerride.rent %> / Day
        </p>
      </div>
      <div class="col-lg-6">
        <br>
        <h4><i class="fa fa-location-arrow"></i> &nbsp<b>Pickup Location</b></h4>
        <hr><br>
        <p>
          <b>Address:</b><%= @passengerride.pickup %>
        </p><br>
        <p>
          <% if @passengerride.userlocation == true %>
              <b>Also delivers to user preferred location.</b>
          <% end %>
        </p>
      </div>
    </div>
    <br>
    <hr><br>
    <div class="row">
      <div class="col-lg-6">
        <h4><i class="fa fa-bars"></i> &nbsp<b>Specifications</b></h4>
        <hr>
        <% if @passengerride.ac.present? || @passengerride.navigation.present? || @passengerride.rearbackupcamera.present? || @passengerride.tv.present? || @passengerride.mileage.present? || @passengerride.seats.present? || @passengerride.music.present? %>

            <% if @passengerride.fuel.present? %>
                <p>
                  <i class="fa fa-tint"></i>&nbsp&nbsp&nbsp&nbsp<b> | <%= @passengerride.fuel %></b>
                </p>
                <br>
            <% end %>
            <% if @passengerride.seats.present? %>
                <p>
                  <i class="fa fa-users"></i>&nbsp&nbsp<b> | <%= @passengerride.seats %> Seater</b>
                </p>
                <br>
            <% end %>
            <% if @passengerride.mileage.present? %>
                <p>
                  <i class="fa fa-road"></i> &nbsp<b> | <%= @passengerride.mileage %> kilometres per 1 litre</b>
                </p>
                <br>
            <% end %>
            <% if @passengerride.ac.present? %>
                <p>
                  <i class="fa fa-map-o"></i> &nbsp <b> | Air Conditioner</b>
                </p>
                <br>
            <% end %>
            <% if @passengerride.tv.present? %>
                <p>
                  <i class="fa fa-television"></i> &nbsp<b> | Television</b>
                </p>
                <br>
            <% end %>
            <% if @passengerride.music.present? %>


                <% if @passengerride.bluetooth.present? && @passengerride.auxcable.present? %>
                    <p>
                      <i class="fa fa-music"></i> &nbsp&nbsp<b> | Music System with AUX cable and bluetooth.</b>
                    </p>
                    <br>
                <% elsif @passengerride.bluetooth.present? %>
                    <p>
                      <i class="fa fa-music"></i> &nbsp&nbsp<b> | Music System with bluetooth.</b>
                    </p>
                    <br>
                <% elsif @passengerride.auxcable.present? %>
                    <p>
                      <i class="fa fa-music"></i> &nbsp&nbsp<b> | Music System with AUX cable</b>
                    </p>
                    <br>
                <% else %>
                    <p>
                      <i class="fa fa-music"></i> &nbsp&nbsp<b> | Music System</b>
                    </p>
                    <br>
                <% end %>
            <% end %>
            <% if @passengerride.navigation.present? %>
                <p>
                  <i class="fa fa-map-marker"></i> &nbsp&nbsp&nbsp<b> | Navigation</b>
                </p>
                <br>
            <% end %>
            <% if @passengerride.rearbackupcamera.present? %>
                <p>
                  <i class="fa fa-camera"></i>&nbsp&nbsp<b> | Rear Backup Camera</b>
                </p>
                <br>
            <% end %>


            <hr>
            <br>
        <% end %>
      </div>
      <div class="col-lg-6">
        <h4><i class="fa fa-ban"></i> &nbsp<b>Restrictions</b></h4>
        <hr>
        <% if @passengerride.pets.present? %>
            <p>
              <i class="fa fa-paw"></i>&nbsp&nbsp<b> | Pets are not allowed into the vehicle.</b>
            </p>
            <br>
        <% end %>
        <% if @passengerride.drinking.present? %>
            <p>
              <i class="fa fa-glass"></i>&nbsp&nbsp<b> | Drinking alcohol in the vehicle is prohibited.</b>
            </p>
            <br>
        <% end %>
        <% if @passengerride.smoking.present? %>
            <p>
              <i class="fa fa-magic"></i>&nbsp&nbsp<b> | Smoking in the vehicle is prohibited..</b>
            </p>
            <br>
        <% end %>
        <% if @passengerride.eating.present? %>
            <p>
              <i class="fa fa-birthday-cake"></i>&nbsp&nbsp<b> | Eating in the vehicle is prohibited.</b>
            </p>
            <br>
        <% end %>


      </div>
      <hr>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <% if @passengerride.additionalinfo.present? %>
            <hr>
            <h4><i class="fa fa-info"></i>&nbsp&nbsp&nbsp&nbsp<b>More Info</b></h4>
            <hr>
            <p>
              <%= @passengerride.additionalinfo %>
            </p>
            <br>
        <% end %>

        <div class="passengerride-actions">
          <% if @passengerride.user == current_user %>
              <%= link_to 'Back', passengerrides_path, class: "btn" %>
              <% @rangeddg = Requestforpm.where('(passengerride_id = ?) AND (status = ?)', @passengerride.id, 'Accepted') %>
              <% if @rangeddg.present? %>

              <% else %>
                  <%= link_to 'Edit', edit_passengerride_path(@passengerride), class: "btn btn-success" %>
                  <%= link_to 'Delete', passengerride_path(@passengerride), method: :delete,
                              data: { confirm: "Are you sure you want to delete this ride?"},
                              class: "btn btn-danger"%>
                  <br><br>
              <% end %>
              <br>
              <%= render partial: 'requestforpms/form' %>
          <% else %>
              <%= link_to 'Back', passengerrides_path, class: "btn" %>


              <%#= form_for(@requestforpm) do |fo| %>

              <%#= fo.hidden_field :passengerride_id, :value =>  %>

              <%# end %>

              <%#= link_to 'Add Ride (currently building)', '#', class: "btn btn-primary" %>
              <%= render partial: 'requestforpms/form' %>
          <% end %>


          <%#= render :partial => @passengerride.requestforpms %>
        </div>
      </div>
    </div>
    <!--<div class="col-lg-6">-->
    <!--<b>Place map here</b>-->
    <!--</div>-->
    <hr>
    <div class="row">
      <div class="col-lg-6">

        <h2><%= @passengerride.comments.count %> Comments</h2>
        <br>
        <%= render @passengerride.comments %>
        <br>
        <h3>Add a comment:</h3>
        <%= render 'comments/form' %>
      </div>
    </div>
  </div>
</div>
</div>

<% if @passengerride.user != current_user %>
    <div class="well col-xs-14 col-xs-offset">

      <h4 align="center"> Contact me for any queries!</h4>


      <!--<div class="bootstrap-iso">-->
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12">
            <div class="form-horizontal">

              <%= form_tag conversations_path, method: :post do %>
                  <div class="form-group">
                    <div class="col-sm-8">
                      <%= hidden_field_tag :user_id, nil, :value => @passengerride.user.id %>
                      <%#= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-8">
                      <%= text_field_tag :subject, nil, class: "select form-control", placeholder: "Subject*" %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-8">
                      <%= text_area_tag :body, nil, class: "select form-control", placeholder: "Enter your message here." %>
                    </div>
                  </div>
                  <br>
                  <%= submit_tag 'Send Message', class: 'btn btn-warning' %>

              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
    <!--</div>-->
<% end %>

<br>


