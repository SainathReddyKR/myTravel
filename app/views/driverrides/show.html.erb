<link rel="stylesheet" href="https://formden.com/static/cdn/bootstrap-iso.css" />
<link rel="stylesheet" href="https://formden.com/static/cdn/font-awesome/4.4.0/css/font-awesome.min.css" />
<style>.bootstrap-iso .formden_header h2, .bootstrap-iso .formden_header p, .bootstrap-iso form{font-family: Arial, Helvetica, sans-serif; color: black}.bootstrap-iso form button, .bootstrap-iso form button:hover{color: white !important;} .asteriskField{color: red;}</style>


<br><br>

<% @post_attachments.each do |p| %>
    <%= image_tag p.avatar_url %>
    <%= link_to "Edit Attachment", edit_post_attachment_path(p) %>
<% end %>

<div class="well col-xs-14 col-xs-offset">




  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-6">
        <br>
        <h4><i class="fa fa-home"></i> &nbsp<b>Condo Details</b></h4>
        <hr>
        <p>
          <b>Name:</b> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<b><%= @driverride.name %></b>
          <br>
        </p>
        <p>
          <b>Rent:</b> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= @driverride.rent %> / Month
          <br>
        </p>
        <p>
          <% if @driverride.contract.present? %>
              <b>Contract:</b> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= @driverride.contract %> Months
          <% end %>
          <br>
        </p>
        <p>
          <% if @driverride.area.present? %>
              <b>Area:</b> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= @driverride.area %> sqm
          <% end %>
          <br>
        </p>
        <p>
          <% if @driverride.bedroom.present? && @driverride.bedroom == 1 %>
              <b>Bedroom:</b> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= @driverride.bedroom %> Bedroom
          <% elsif @driverride.bedroom.present? && @driverride.bedroom != 1 %>
              <b>Bedroom:</b> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= @driverride.bedroom %> Bedrooms
          <% end %>
          <br>
        </p>

        <p>
          <% if @driverride.bathroom.present? && @driverride.bathroom == 1 %>
              <b>Bathroom:</b> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= @driverride.bathroom %> Bathroom
          <% elsif @driverride.bedroom.present? && @driverride.bedroom != 1 %>
              <b>Bathroom:</b> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= @driverride.bathroom %> Bathrooms
          <% end %>
          <br>
        </p>
        <p>
          <% if @driverride.kitchen.present? && @driverride.kitchen == 1 %>
              <b>Area:</b> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= @driverride.kitchen %> Kitchen
          <% elsif @driverride.kitchen.present? && @driverride.kitchen != 1 %>
              <b>Area:</b> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= @driverride.kitchen %> Kitchens
          <% end %>
          <br>
        </p>
        <br>
        <h4><i class="fa fa-map-marker"></i> &nbsp<b>Location</b></h4>
        <hr><br>
        <p>
          <b>Address:</b> <%= @driverride.address %>
        </p><br>
      </div>

      <div class="row">
        <div class="col-lg-6">

          <% if @driverride.swimmingpool.present? || @driverride.elevator.present? || @driverride.parking.present? || @driverride.security.present? || @driverride.balcony.present? || @driverride.gym.present? || @driverride.kids.present? %>
              <br>
              <h4><i class="fa fa-bars"></i> &nbsp<b>Features</b></h4>
              <hr>
              <% if @driverride.swimmingpool.present? %>
                  <p>
                    <i class="fa fa-tint"></i>&nbsp&nbsp&nbsp&nbsp<b> | Swimming Pool</b>
                  </p>
              <% end %>
              <% if @driverride.elevator.present? %>
                  <p>
                    <i class="fa fa-users"></i>&nbsp&nbsp<b> | Elevator</b>
                  </p>
              <% end %>
              <% if @driverride.parking.present? %>
                  <p>
                    <i class="fa fa-car"></i> &nbsp<b> | Parking</b>
                  </p>
              <% end %>
              <% if @driverride.security.present? %>
                  <p>
                    <i class="fa fa-lock"></i> &nbsp <b> | 24x7 Security</b>
                  </p>
              <% end %>
              <% if @driverride.balcony.present? %>
                  <p>
                    <i class="fa fa-television"></i> &nbsp<b> | Balcony</b>
                  </p>
              <% end %>
              <% if @driverride.gym.present? %>
                  <p>
                    <i class="fa fa-map-marker"></i> &nbsp&nbsp&nbsp<b> | Gym</b>
                  </p>
              <% end %>
              <% if @driverride.kids.present? %>
                  <p>
                    <i class="fa fa-camera"></i>&nbsp&nbsp<b> | Kids Playground</b>
                  </p>
              <% end %>


              <hr>
              <br>
          <% end %>
        </div>
        <div class="col-lg-6">

          <% if @driverride.eleven.present? || @driverride.bigc.present? || @driverride.familymart.present? || @driverride.tesco.present? || @driverride.tops.present? || @driverride.lawson.present? || @driverride.makro.present? %>
              <br>
              <h4><i class="fa fa-opencart"></i><b>Stores Nearby</b></h4>
              <hr>
              <% if @driverride.eleven.present? %>
                  <p>
                    <i class="fa fa-shopping-cart"></i><b> | 7-Eleven</b>
                  </p>
              <% end %>
              <% if @driverride.bigc.present? %>
                  <p>
                    <i class="fa fa-shopping-cart"></i><b> | Big C</b>
                  </p>
              <% end %>
              <% if @driverride.familymart.present? %>
                  <p>
                    <i class="fa fa-shopping-cart"></i><b> | FamilyMart</b>
                  </p>
              <% end %>
              <% if @driverride.tesco.present? %>
                  <p>
                    <i class="fa fa-shopping-cart"></i><b> | Tesco</b>
                  </p>
              <% end %>
              <% if @driverride.tops.present? %>
                  <p>
                    <i class="fa fa-shopping-cart"></i><b> | Tops Market</b>
                  </p>
              <% end %>
              <% if @driverride.lawson.present? %>
                  <p>
                    <i class="fa fa-shopping-cart"></i><b> | Lawson</b>
                  </p>
              <% end %>
              <% if @driverride.makro.present? %>
                  <p>
                    <i class="fa fa-shopping-cart"></i><b> | Makro</b>
                  </p>
              <% end %>


              <hr>
              <br>
          <% end %>
        </div>
      </div>
      <br>
      <hr><br>


    </div>

    <hr>

    <div class="driverride-actions">
      <% if @driverride.user == current_user %>
          <%= link_to 'Back', driverrides_path, class: "btn" %>
          <% @rangedd = Requestfordm.where('(driverride_id = ?) AND (status = ?)', @driverride.id, 'Accepted') %>

          <% if @rangedd.present? %>

          <% else %>

              <%= link_to 'Edit', edit_driverride_path(@driverride), class: "btn btn-success" %>
              <%= link_to 'Delete', driverride_path(@driverride), method: :delete,
                          data: { confirm: "Are you sure you want to delete this ride?"},
                          class: "btn btn-danger"%>
              <br><br>
          <% end %>
          <%= render partial: 'requestfordms/form' %>
      <% else %>
          <%= link_to 'Back', driverrides_path, class: "btn" %>
          <%= render partial: 'requestfordms/form' %>
      <% end %>
    </div>
  </div>

  <hr>
  <div class="row">
    <div class="col-lg-6">

      <h2><%= @driverride.commonts.count %> Comments</h2>
      <br>
      <%= render @driverride.commonts %>
      <hr>
      <br>
      <h3>Add a comment:</h3>
      <%= render 'commonts/form' %>
    </div>
  </div>

</div>
</div>
</div>

<% if @driverride.user != current_user %>
    <div class="well col-xs-14 col-xs-offset">

      <h4 align="center"> PM me for any queries!</h4>


      <!--<div class="bootstrap-iso">-->
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12">
            <div class="form-horizontal">

              <%= form_tag conversations_path, method: :post do %>
                  <div class="form-group">
                    <div class="col-sm-8">
                      <%= hidden_field_tag :user_id, nil, :value => @driverride.user.id %>
                      <%#= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name) %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-8">
                      <%= text_field_tag :subject, nil, class: "select form-control", placeholder: "Subject" %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-8">
                      <%= text_area_tag :body, nil, class: "select form-control", placeholder: "Enter your message here." %>
                    </div>
                  </div>
                  <br>
                  <%= submit_tag 'Send Message', class: 'btn btn-warning' %>

              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
    <!--</div>-->
<% end %>
